<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for select_task which is meant to be used when selecting tasks without interacting or toggling any of its
     buttons -->
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/selecttask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.selecttask.SelectTaskFragment">

    <!-- todo: set up taskbar to filter by complete and incomplete -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/select_task_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/select_task_item"
        />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
